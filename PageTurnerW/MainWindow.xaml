<Window x:Class="PageTurnerW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PageTurnerW.Controls"
        mc:Ignorable="d"
        Title="PageTurnerW" Height="200" Width="400">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:LabeledText Name="Status" Grid.Row="0" Grid.RowSpan="2" Label="Status" Text="Ready"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Time:" FontWeight="Bold" Margin="0,5,5,0"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Name="StartTimeText" Text="N/A" Margin="0,5,0,0"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Elapsed Time:" FontWeight="Bold" Margin="0,5,5,0"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Name="ElapsedTimeText" Text="N/A" Margin="0,5,0,0"/>
        
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Mouse Position:" FontWeight="Bold" Margin="0,5,5,0"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Name="MousePositionText" Text="N/A" Margin="0,5,0,0"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Volume:" FontWeight="Bold" Margin="0,5,5,0"/>
        <ProgressBar Grid.Row="4" Grid.Column="1" Name="VolumeProgressBar" Minimum="0" Maximum="100" Height="20" Margin="0,5,0,0"/>

        <Button Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" Content="Capture Mouse Position" Margin="0,10,0,5" 
                Click="CaptureMousePosition_Click"/>
    </Grid>
</Window>
