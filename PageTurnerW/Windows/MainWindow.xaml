<Window x:Class="PageTurnerW.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:PageTurnerW.Converters"
        mc:Ignorable="d"
        Closing="OnClosing"
        Title="Page Turner" Height="340" Width="400">
    <Window.Resources>
        <converters:NumToVisibilityConverter x:Key="NumToVisibilityConverter" />
        <converters:ElapsedConverter x:Key="ElapsedConverter"></converters:ElapsedConverter>
        <Style TargetType="Label">
            <!-- <Setter Property="Background" Value="Red" /> -->
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="0" />
        </Style>
        <Style TargetType="TextBlock">
            <!-- <Setter Property="Background" Value="DarkCyan" /> -->
            <Setter Property="VerticalAlignment" Value="Center" />

            <Setter Property="Padding" Value="12 0 0 0" />
            <Setter Property="Text" Value="Text" />
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Margin="0 8 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Time" Margin="0" />
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0">
                <TextBlock Text="{Binding StartTimeText}" />
                <StackPanel Orientation="Horizontal" Margin="4 0"
                            Visibility="{Binding ElapsedTime, Converter={StaticResource NumToVisibilityConverter}}">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </StackPanel.Resources>
                    <TextBlock Text="(" />
                    <TextBlock Text="{Binding ElapsedTime, Converter={StaticResource ElapsedConverter}}" />
                    <TextBlock Text=")" />
                </StackPanel>
            </StackPanel>

            <Label Grid.Row="1" Grid.Column="0" Content="Position" />
            <TextBlock Grid.Row="1" Grid.Column="1"
                   Text="{Binding MousePositionText}"
                   MouseRightButtonDown="OnMouseRightButtonDown"
                   Cursor="Hand" />

            <Label Grid.Row="2" Grid.Column="0" Content="#Clicks" />
            <TextBlock Grid.Row="2" Grid.Column="1"
                       Text="{Binding ClicksCount}" />

            <Label Grid.Row="3" Grid.Column="0" Content="Volume" />
            <ProgressBar Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="1" Height="20" Margin="8 0 0 0"
                         Value="{Binding VolumeProgressBarValue}" />
            <TextBlock Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right"
                       Padding="4 0"
                       Text="{Binding VolumeProgressBarValue, StringFormat=p1}" />

            <Grid Grid.Row="6" Grid.ColumnSpan="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1"
                        Content="CAPTURE"
                        Click="CaptureMousePosition_Click">
                </Button>
            </Grid>
        </Grid>
        <StatusBar Grid.Row="1" Margin="0">
            <Label Content="{Binding Status}"
                   HorizontalAlignment="Left"
                   Margin="0" />
        </StatusBar>
    </Grid>
</Window>