<Window x:Class="PageTurnerW.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:PageTurnerW.Converters"
        xmlns:vm="clr-namespace:PageTurnerW.ViewModels"
        xmlns:validators="clr-namespace:PageTurnerW.Validators"
        mc:Ignorable="d"
        Closing="OnClosing"
        Title="Page Turner" Height="340" Width="400">
    <Window.Resources>
        <vm:MainVM x:Key="ViewModel"/>
        <converters:NumToVisibility x:Key="NumToVisibilityConverter" />
        <converters:ElapsedToNum x:Key="ElapsedConverter"></converters:ElapsedToNum>
        <converters:StateToPauseResumeTextConverter x:Key="StateToPauseResumeTextConverter" />
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="0" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />

            <Setter Property="Padding" Value="12 0 0 0" />
            <Setter Property="Text" Value="Text" />
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="CornflowerBlue" />
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="BorderBrush" Value="Red" />
                    <Setter Property="ToolTip"
                            Value="{Binding RelativeSource={RelativeSource Self},
                        Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="4" DataContext="{StaticResource ViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Margin="0 8 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Time" Margin="0" />
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0">
                <TextBlock Text="{Binding StartTimeText}" />
                <StackPanel Orientation="Horizontal" Margin="4 0"
                            Visibility="{Binding TotalElapsedTime, Converter={StaticResource NumToVisibilityConverter}}">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </StackPanel.Resources>
                    <TextBlock Text="(" />
                    <TextBlock Text="{Binding TotalElapsedTime, Converter={StaticResource ElapsedConverter}}" />
                    <TextBlock Text="," />
                    <TextBlock Text="{Binding LastElapsedTime, Converter={StaticResource ElapsedConverter}}" />
                    <TextBlock Text=")" />
                </StackPanel>
            </StackPanel>

            <Label Grid.Row="1" Grid.Column="0" Content="Position" />
            <TextBlock Grid.Row="1" Grid.Column="1"
                   Text="{Binding MousePositionText}"
                   MouseEnter="Coords_OnMouseEnter"
                   MouseLeave="Coords_OnMouseLeave"
                   MouseRightButtonDown="Coords_OnMouseRightButtonDown"
                   Cursor="Hand" />

            <Label Grid.Row="2" Grid.Column="0" Content="#Clicks" />
            <TextBlock Grid.Row="2" Grid.Column="1"
                       Text="{Binding ClicksCount}" />

            <Label Grid.Row="3" Grid.Column="0">
                <StackPanel Orientation="Vertical">
                    <TextBlock Margin="0" Padding="0">Silence</TextBlock>
                    <TextBlock Margin="0" Padding="0">Threshold</TextBlock>
                </StackPanel>
            </Label>
            <TextBox Grid.Row="3"  Grid.Column="1"
                     Padding="4 2 76 0"
                     Margin="8 0 0 0" Height="24">
                <TextBox.Text>
                    <Binding Path="SilenceThresholdS" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validators:BoundNumVR Min="0" Max="1000" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <TextBlock Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right"
                       Padding="4 0"
                       Text="seconds" />

            <Label Grid.Row="4" Grid.Column="0" Content="Volume" />
            <ProgressBar Grid.Row="4" Grid.Column="1" Minimum="0" Maximum="1" Height="20" Margin="8 0 0 0"
                         Value="{Binding Volume}" />
            <TextBlock Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right"
                       Padding="4 0"
                       Text="{Binding Volume, StringFormat=p1}" />

            <Grid Grid.Row="7" Grid.ColumnSpan="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1"
                        Content="{Binding State, Converter={StaticResource StateToPauseResumeTextConverter}}"
                        Command="{Binding TogglePauseCommand}"/>
                <Button Grid.Column="2"
                        Content="CAPTURE"
                        Command="{Binding CaptureMousePositionCommand}"/>
            </Grid>
        </Grid>
        <StatusBar Grid.Row="1" Margin="0">
            <Label Content="{Binding Status}"
                   HorizontalAlignment="Left"
                   FontWeight="DemiBold"
                   Margin="0" />
            <TextBlock Text="{Binding StatusMessage}"/>
        </StatusBar>
    </Grid>
</Window>